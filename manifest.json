{
  "manifest_version": 2,
  "name": "SRT Macro",
  "description": "SRT 자동 예약 매크로",
  "version": "1.0.9",
  "permissions": [
    "https://etk.srail.kr/"
  ],
  "icons": {
      "128": "images/icon128.png"
  },
  "content_scripts": [ {
    "all_frames": true,
    "js": ["jquery-1.11.3.min.js", "content.js"],
    "matches": ["https://etk.srail.kr/*"],
    "run_at": "document_end"
  }],
  "background": {
    "page": "background.html"
  },
  "web_accessible_resources": [
    "images/btn_start.png", "images/btn_stop.png", "assets/tada.mp3"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
